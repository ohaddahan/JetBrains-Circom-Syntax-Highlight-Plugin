<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.ohaddahan.circom</id>
    <name>Circom Language Support</name>
    <vendor url="https://github.com/ohaddahan">ohaddahan</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- File Type -->
        <fileType name="Circom file"
                  language="Circom"
                  implementationClass="com.ohaddahan.circom.lang.CircomFileType"
                  extensions="circom"
                  fieldName="INSTANCE"/>

        <!-- Syntax Highlighter -->
        <lang.syntaxHighlighterFactory language="Circom"
                                       implementationClass="com.ohaddahan.circom.lang.CircomSyntaxHighlighterFactory"/>

        <!-- Color Schemes -->
        <additionalTextAttributes scheme="Default" file="colorSchemes/CircomDefault.xml"/>
        <additionalTextAttributes scheme="Dark" file="colorSchemes/CircomDefault.xml"/>
        <additionalTextAttributes scheme="Darcula" file="colorSchemes/CircomDefault.xml"/>

        <!-- Bracket Matching -->
        <lang.braceMatcher language="Circom"
                           implementationClass="com.ohaddahan.circom.ide.CircomBraceMatcher"/>

        <!-- Code Folding -->
        <lang.foldingBuilder language="Circom"
                             implementationClass="com.ohaddahan.circom.ide.CircomFoldingBuilder"/>

        <!-- Commenting -->
        <lang.commenter language="Circom"
                        implementationClass="com.ohaddahan.circom.ide.CircomCommenter"/>

        <!-- Parser Definition -->
        <lang.parserDefinition language="Circom"
                               implementationClass="com.ohaddahan.circom.psi.CircomParserDefinition"/>

        <!-- Find Usages -->
        <lang.findUsagesProvider language="Circom"
                                 implementationClass="com.ohaddahan.circom.ide.CircomFindUsagesProvider"/>

        <!-- Go to Symbol -->
        <gotoSymbolContributor
                implementation="com.ohaddahan.circom.ide.CircomChooseByNameContributor"/>

        <!-- Structure View -->
        <lang.psiStructureViewFactory language="Circom"
                                      implementationClass="com.ohaddahan.circom.ide.CircomStructureViewFactory"/>

        <!-- References -->
        <psi.referenceContributor
                                  implementation="com.ohaddahan.circom.reference.CircomReferenceContributor"/>

        <!-- Refactoring -->
        <lang.refactoringSupport language="Circom"
                                 implementationClass="com.ohaddahan.circom.refactoring.CircomRefactoringSupportProvider"/>

        <lang.namesValidator language="Circom"
                             implementationClass="com.ohaddahan.circom.refactoring.CircomNamesValidator"/>
    </extensions>
</idea-plugin>
